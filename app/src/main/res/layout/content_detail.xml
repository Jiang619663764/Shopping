<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <com.example.huhu.shopping.view.MyToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@mipmap/icon_back"
            app:rightButton="@mipmap/icon_menu"
            app:isShowing="false"
            app:title="详情" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            app:placeholderImage="@mipmap/ic_launcher"
            app:failureImage="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/detail_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_img"
            android:textSize="35sp"
            android:text="商品:雪碧"/>
        <TextView
            android:id="@+id/detail_txt_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_txt_name"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="详情：谈书安型饮料"/>
        <TextView
            android:id="@+id/detail_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_txt_intro"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:padding="15dp"
            android:text="￥10"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">
        <Button
            android:id="@+id/detail_btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加购物车"/>
        <Button
            android:id="@+id/detail_btn_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结算"/>
    </LinearLayout>
</RelativeLayout>
